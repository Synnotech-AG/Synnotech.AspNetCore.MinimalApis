<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Version>0.2.0</Version>
        <Nullable>enable</Nullable>
        <Company>Synnotech AG</Company>
        <Authors>Synnotech AG</Authors>
        <Copyright>Copyright Â© 2022 Synnotech AG</Copyright>
        <Description>Provides extensions for ASP.NET Core Minimal APIs (public IResult classes).</Description>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IsPackable>true</IsPackable>
        <TreatWarningsAsErrors Condition="'$(Configuration)' == 'Release'">true</TreatWarningsAsErrors>
        <PackageTags>AspNetCore, IResult, HTTP-Responses, HTTP, Web-APIs</PackageTags>
        <PackageIcon>synnotech-logo.png</PackageIcon>
        <PackageProjectUrl>https://github.com/Synnotech-AG/Synnotech.AspNetCore.MinimalApis</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Synnotech-AG/Synnotech.AspNetCore.MinimalApis.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReleaseNotes>
Synnotech.AspNetCore.MinimalApis 0.2.0
---------------------------------------

- added extension methods to easily retrieve the status code, the body, or the Location header URL via an IResult instance
- see the full docs at https://github.com/Synnotech-AG/Synnotech.AspNetCore.MinimalApis
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Light.GuardClauses" Version="10.0.0" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../../synnotech-logo.png" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>